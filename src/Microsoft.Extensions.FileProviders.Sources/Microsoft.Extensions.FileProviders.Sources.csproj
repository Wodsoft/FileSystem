<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>File provider shared source code for Microsoft.Extensions.FileProviders.</Description>
    <VersionPrefix>1.1.1</VersionPrefix>
    <TargetFramework>net40</TargetFramework>
    <AssemblyName>Microsoft.Extensions.FileProviders.Sources</AssemblyName>
    <PackageId>Wodsoft.Extensions.FileProviders.Sources</PackageId>
    <PackageTags>files;filesystem</PackageTags>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/wodsoft/filesystem</RepositoryUrl>
    <GenerateTargetFrameworkAttribute>false</GenerateTargetFrameworkAttribute>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <DisableImplicitFrameworkReferences>true</DisableImplicitFrameworkReferences>
    <ContentTargetFolders>contentFiles</ContentTargetFolders>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <IsPackable>true</IsPackable>
    <NoWarn>CS8021</NoWarn>
    <NoBuild>true</NoBuild>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>
  
  <ItemGroup>
    <Compile Update="@(Compile)">
      <Pack>true</Pack>
      <PackagePath>$(ContentTargetFolders)\cs\net40\$(PackageId)\%(RescursiveDir)</PackagePath>
    </Compile>
    <EmbeddedResource Update="@(EmbeddedResource)">
      <Pack>true</Pack>
      <PackagePath>$(ContentTargetFolders)\any\any\$(PackageId)\%(RescursiveDir)</PackagePath>
    </EmbeddedResource>
  </ItemGroup>

  <Target Name="Compile" />
  <Target Name="CopyFilesToOutputDirectory" />

</Project>
